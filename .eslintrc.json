{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "parser": "babel-eslint",
        "sourceType": "module"

    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "react/display-name": "off",
        "react/prop-types": "off"

    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "ignorePatterns": [
        "node_modules/",
        "src/imgs",
        "src/index.css"
    ],
    "overrides": [{
        "files": [
            "**/*.test.js"
        ],
        "env": {
            "jest": true
        }
    }]
}